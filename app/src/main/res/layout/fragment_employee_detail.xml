<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/paddingTop"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_padding"
    android:paddingRight="@dimen/common_padding"
    tools:context=".EmployeeDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imageDetailsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:minWidth="@dimen/image_size"
        android:maxHeight="@dimen/image_size"
        />
    <TextView
        android:id="@+id/nameTextDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/text_margin"
        android:paddingLeft="@dimen/alignment"
        android:layout_below="@+id/imageDetailsView"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/employeeDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/alignment"
        android:layout_below="@id/nameTextDetails"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/alignment"
        android:textAlignment="center"
        android:textStyle="bold" />

</LinearLayout>